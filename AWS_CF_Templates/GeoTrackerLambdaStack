Resources:

  GeoTrackerLambdaRole:
    Type: AWS::IAM::Role
    Properties:
      RoleName: GeoTrackerLambdaRole
      AssumeRolePolicyDocument:
        Version: "2012-10-17"
        Statement:
          - Effect: Allow
            Principal:
              Service: lambda.amazonaws.com
            Action: sts:AssumeRole
      Policies:
        - PolicyName: DynamoDBAccess
          PolicyDocument:
            Version: "2012-10-17"
            Statement:
              - Effect: Allow
                Action:
                  - dynamodb:PutItem
                Resource: arn:aws:dynamodb:us-east-1:042889969210:table/GeoVisitors

  GeoTrackerFunction:
    Type: AWS::Lambda::Function
    Properties:
      FunctionName: GeoTracker
      Handler: GeoTracker.lambda_handler
      Role: !GetAtt GeoTrackerLambdaRole.Arn
      Runtime: python3.12
      Timeout: 10
      Environment:
        Variables:
          DYNAMO_TABLE_NAME: GeoVisitors
      Code:
        S3Bucket: subrealstudios.com
